        function changeLanguage(lang) {
            const html = document.documentElement;
            html.lang = lang;
            html.dir = (lang === 'he') ? 'rtl' : 'ltr';
            const t = translations[lang];
            document.getElementById('rank-badge').innerText = t.rank;
            document.getElementById('name-title').innerHTML = lang === 'he' ? `×“×™××™×˜×¨×™ <span class="text-orange-500">×“×•×‘×•×‘</span>` : t.name;
            document.getElementById('hero-desc').innerText = t.hero;
            document.getElementById('consult-text').innerHTML = `<i class="fas fa-shield-halved text-emerald-500"></i> ${t.consult}`;
            for(let i=1; i<=5; i++) {
                document.getElementById(`serv-t-${i}`).innerText = t[`serv${i}_t`];
                document.getElementById(`serv-d-${i}`).innerText = t[`serv${i}_d`];
            }
        }
